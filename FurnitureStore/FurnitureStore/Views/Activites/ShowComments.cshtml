@model IEnumerable<FurnitureStore.Models.Comment>

@{
    ViewData["Title"] = "ShowComments";
    Layout = "_HomeLayout";
}
<link rel="stylesheet" href="~/css/RatingStarsStyleSheet.css" />

<div class="container" style="margin-top:150px;">
    <div class="row">
        <div class="col-md-3">
            Name
        </div>
        <div class="col-md-3">
            Section
        </div>
        <div class="col-md-5">
            Comment
        </div>
        <div class="col-md-1">
            Delete
        </div>
    </div>
    <hr />
    @foreach (var item in Model)
    {
        <div class="row">
            <div class="col-md-3">
                <h4><a asp-action="ShowProduct" asp-controller="Furnitures" asp-route-id="@item.FurnitureId"> @Html.DisplayFor(modelItem => item.Furniture.Name)</a></h4>
            </div>
            <div class="col-md-3">
                <h4><a asp-action="FurnituresOfSection" asp-controller="Furnitures" asp-route-id="@item.Furniture.SectionId"> @Html.DisplayFor(modelItem => item.Furniture.Section.Name)</a></h4>
            </div>
            <div class="col-md-5">
                <h4>@item.Description</h4>
            </div>
            <div class="col-md-1">
                <form asp-action="DeleteComment" asp-controller="Comments" method="post">
                    <input name="id" value="@item.Id" hidden/>
                    <button type="submit" value="delete" style="color:red">Delete</button>
                </form>
            </div>
        </div>
        <hr />
    }
</div>