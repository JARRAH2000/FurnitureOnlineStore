@model IEnumerable<FurnitureStore.Models.Payment>

@{
    ViewData["Title"] = "ShowPayments";
    Layout = "_HomeLayout";
}
<link href="https://cdn.datatables.net/1.11.1/css/jquery.dataTables.min.css" rel="stylesheet" />
<link href="https://cdn.datatables.net/buttons/2.0.0/css/buttons.dataTables.min.css" rel="stylesheet" />



<div class="container" style="margin-top:150px;">
    <div class="row">
        <div class="col-md-12">
            <table>
                @{
                    ModelContext context = new ModelContext();
                }
                @foreach (Payment payment in Model)
                {
                    var pro = context.ProductPayments.Where(prod => prod.PaymentId == payment.Id).ToList();
                    decimal? total = pro.Sum(p => p.Price * p.Quantity);
                    <tr>
                        <td>
                            <table border="1" id="" class="display" style="width:100%">
                                <caption style="caption-side:top">@payment.BillTime | Total : @string.Format("{0:C}",total)</caption>
                                <thead>
                                    <tr>
                                        <td>
                                            Name
                                        </td>
                                        <td>
                                            Section
                                        </td>
                                        <td>
                                            Quantity
                                        </td>
                                        <td>
                                            Price
                                        </td>
                                        <td>
                                            Total
                                        </td>
                                    </tr>
                                </thead>
                                <tbody>
                                @foreach (ProductPayment p in pro)
                                {
                                    Furniture furniture = context.Furnitures.Where(fur => fur.Id == p.FurnitureId).FirstOrDefault();
                                    Section category = null;
                                    if (furniture != null)
                                        category = context.Sections.Where(sec => sec.Id == furniture.SectionId).FirstOrDefault();
                                    <tr>
                                        <td>   
                                            @if(furniture!=null)
                                            @furniture.Name
                                        </td>
                                        <td>            
                                            @if(category!=null)
                                            @category.Name
                                        </td>
                                        <td>
                                            @p.Quantity
                                        </td>
                                        <td>
                                            @string.Format("{0:C}",p.Price)
                                        </td>
                                        <td>
                                            @string.Format("{0:C}",p.Price*p.Quantity)
                                        </td>
                                    </tr>
                                }
                                </tbody>
                            </table>
                        </td>
                    </tr>
                }
            </table>
        </div>
    </div>
</div>


<script src="https://code.jquery.com/jquery-3.5.1.js"></script>

<script src="https://cdn.datatables.net/1.11.1/js/jquery.dataTables.min.js" defer></script>

<script src="https://cdn.datatables.net/buttons/2.0.0/js/dataTables.buttons.min.js" defer></script>

<script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.1.3/jszip.min.js"></script>

<script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/pdfmake.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/vfs_fonts.js"></script>
<script src="https://cdn.datatables.net/buttons/2.0.0/js/buttons.html5.min.js" defer></script>

<script>
    $(document).ready(function () {
        $('table.display').DataTable({
            dom: 'Bfrtip',
            buttons: [
                'copyHtml5',
                'excelHtml5',
                'csvHtml5',
                'pdfHtml5'
            ]
        });
    });
</script>
















