@model FurnitureStore.Models.User

@{
    ViewData["Title"] = "Index";
    //Layout = "~/Views/Shared/_HomeLayout.cshtml";
    Layout = null;
}
@functions{
    void ChangingPassword()
    {
        @if (TempData["PasswordState"] != null)
        {
            if (!Convert.ToBoolean(TempData["PasswordState"]))
            {
                <h3 style="color:red">Wrong password!</h3>
            }
            else
            {
                <h3 style="color:green">Password has been changed</h3>
            }
        }
    }
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <!--  This file has been downloaded from bootdey.com bootdey on twitter -->
    <!--  All snippets are MIT license http://bootdey.com/license -->
    <title>account setting or edit profile - Bootdey.com</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <script src="https://code.jquery.com/jquery-1.10.2.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/myScript.js"></script>
    <link rel="stylesheet" href="~/css/ClientStyleSheet.css" />

</head>
<body >
   
    <div class="container" >
        <form enctype="multipart/form-data" method="post" asp-action="Edit" asp-route-id="@Model.Id" >
            <div class="row gutters">
                <div class="col-xl-3 col-lg-3 col-md-12 col-sm-12 col-12">
                    <div class="card h-100">
                        <div class="card-body">
                            <div class="account-settings">
                                <div class="user-profile">
                                    <div class="user-avatar">
                                        <img id="output" src="~/Images/@Model.Imagepath")  alt="" style="border-radius:20%;" width="100" height="100" />
                                        <label asp-for="ImageFile"></label>
                                        <input asp-for="ImageFile" type="file" accept="image/*" onchange="loadFile(event)" id="image" />
                                        <span asp-validation-for="ImageFile" class="text-danger"></span>
                                        <input type="button" value="remove" id="removebutton" onclick="dropFile('output','image')" hidden />
                                    </div>
                                    <h4 class="user-name">@Model.Firstname @Model.Lastname</h4><br />
                                    <h5 class="user-email">Email: @Model.Accounts.Where(acc=>acc.UserId==Model.Id).FirstOrDefault().Username</h5>
                                    <hr />
                                    <h3><a asp-action="Index" asp-controller="Home">Home</a></h3>
                                    <h3><a asp-action="ShowBag" asp-controller="Activites">Bag</a></h3>
                                    <h3><a asp-action="ShowPayments" asp-controller="Activites" >Payment</a></h3>
                                    <h3><a asp-action="ShowPreference" asp-controller="Activites">Favourite</a></h3>
                                    <h3><a asp-action="ShowComments" asp-controller="Activites">Comments</a></h3>
                                    <h3><a asp-action="ShowRatings" asp-controller="Activites">Rating</a></h3>
                                    <h3><a asp-action="WriteTestimonial" asp-controller="Testimonials">Testimonial</a></h3>
                                    <hr />
                                    @if (ViewBag.Role != null)
                                    {
                                        <h6><a asp-action="AdminDashboard" asp-controller="Admin" style="color:blue">Admin Dashboard</a></h6>
                                    }
                                    <h6><a asp-action="Logout" asp-controller="Authentication" style="color:red">Log out</a></h6>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-xl-9 col-lg-9 col-md-12 col-sm-12 col-12">
                    <div class="card h-100">
                        <div class="card-body">
                            <div class="row gutters">
                                <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                                    <h6 class="mb-2 text-primary">Personal Details</h6>
                                </div>
                                <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                                    <div class="form-group">
                                        <label asp-for="Firstname">First Name</label>
                                        <input asp-for="Firstname" type="text" class="form-control" id="fullName" placeholder="Enter first name" >
                                    </div>
                                </div>
                                <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                                    <div class="form-group">
                                        <label asp-for="Lastname">Last Name</label>
                                        <input type="text" asp-for="Lastname" class="form-control" placeholder="Enter last name">
                                    </div>
                                </div>
                                <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                                    <div class="form-group">
                                        
                                        <label asp-for="Birthdate">Birth Date</label>
                                        <input type="date" asp-for="Birthdate" class="form-control" value="@Convert.ToDateTime(Model.Birthdate).ToString("yyyy-MM-dd")" readonly>
                                    </div>
                                </div>
                                <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                                    <div class="form-group">
                                        <label asp-for="Sex">Sex</label>
                                        <input type="text" asp-for="Sex" class="form-control" value="@(Model.Sex == "M" ? "Male" : "Female")" readonly>
                                    </div>
                                </div>
                            </div>
                            <div class="row gutters">
                                <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                                    <h6 class="mt-3 mb-2 text-primary">Password</h6>
                                <p>If you want to change the password, enter the current password and the new password</p>
                                </div>
                                <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                                    <div class="form-group">
                                        <label for="password">Password</label>
                                        <input type="password" class="form-control" id="password" name="password" placeholder="Enter password">
                                    </div>
                                </div>
                                <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                                    <div class="form-group">
                                        <label for="newpassword">new password</label>
                                        <input type="password" name="newpassword" id="newpassword" class="form-control" placeholder="Enter new password">
                                    </div>
                                </div>
                            </div>
                            <div class="row gutters">
                                <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                                    <div class="text-right">
                                        <button type="submit" id="submit" name="submit" class="btn btn-warning">Update</button>
                                    </div>
                                    @{
                                        ChangingPassword();
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
    
</body>
</html>