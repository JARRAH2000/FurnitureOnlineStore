@model FurnitureStore.Models.Message

@{
    ViewData["Title"] = "Delete";
    Layout = "_AdminLayout";
}
<div class="main-content">
    <div class="section__content section__content--p30">
        <h1>Delete a message</h1>

        <h3>Are you sure you want to delete this?</h3>
        <div>
            <h4>Message</h4>
            <hr />
            <dl class="row">
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.Subject)
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.Subject)
                </dd>
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.Text)
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.Text)
                </dd>
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.ImagePath)
                </dt>
                <dd class = "col-sm-10">
                    @if(Model.ImagePath!=null)
                    {
                        <img src=@Url.Content("~/Images/" + Model.ImagePath)
                         asp-append-version="true" style="border-radius:20%;"
                         width="100" height="100" />
                    }
                    else 
                    {
                        <p>No image</p>
                    }
                    </dd>
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.SendTime)
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.SendTime)
                </dd>
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.Email)
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.Email)
                </dd>
            </dl>
    
            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Delete" class="btn btn-danger" /> |
                <a asp-action="Index">Back to List</a>
            </form>
        </div>
    </div>
</div>