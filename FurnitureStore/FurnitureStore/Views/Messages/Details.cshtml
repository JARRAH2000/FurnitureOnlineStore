@model FurnitureStore.Models.Message

@{
    ViewData["Title"] = "Details";
    Layout = "_AdminLayout";
}
<div class="main-content">
    <div class="section__content section__content--p30">
        <h1>Details</h1>
        <div>
            <h4>Message</h4>
            <hr />
            <dl class="row">
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.Subject)
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.Subject)
                </dd>
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.Text)
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.Text)
                </dd>
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.ImagePath)
                </dt>
                <dd class = "col-sm-10">
                    @if(Model.ImagePath!=null)
                    {
                        <img src=@Url.Content("~/Images/" + Model.ImagePath)
                         asp-append-version="true" style="border-radius:20%;"
                         width="100" height="100" />
                    }
                    else 
                    {
                        <p>No image</p>
                    }
                </dd>
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.SendTime)
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.SendTime)
                </dd>
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.Email)
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.Email)
                </dd>
            </dl>
        </div>
        <div>
            <a asp-action="Index">Back to List</a> |
            <a asp-action="Delete" asp-route-id="@Model.Id">Delete</a> |
            <a href="mailto:@Model.Email?subject">Replay</a>
        </div>
    </div>
</div>