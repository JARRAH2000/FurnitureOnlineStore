@model IEnumerable<FurnitureStore.Models.Message>

@{
    ViewData["Title"] = "Index";
    Layout = "_AdminLayout";
}
@functions{
    bool PrintFormat(string str)
    {
        if (str.Length <= 15)
        {
            @str;
            return true;
        }
        else
        {
            @str.Substring(0,15);
            return false;
        }
    }
}
<div class="main-content">
    <div class="section__content section__content--p30">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12">
                    <h2 class="title-1 m-b-25">Messages</h2>
                    <div class="table-responsive table--no-card m-b-40">
                        <table class="table table-borderless table-striped table-earning">
                            <thead>
                                <tr>
                                    <th>@Html.DisplayNameFor(model => model.Subject)</th>
                                    <th>@Html.DisplayNameFor(model => model.Text)</th>
                                    <th>Image</th>
                                    <th>@Html.DisplayNameFor(model => model.SendTime)</th>
                                    <th>@Html.DisplayNameFor(model => model.Email)</th>
                                    <th>Management</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @if (!PrintFormat(item.Subject))
                                            {
                                                <a asp-action="Details" asp-route-id="@item.Id"><sub>read more</sub></a>
                                            }
                                        </td>
                                        <td>
                                            @if (!PrintFormat(item.Text))
                                            {
                                                <a asp-action="Details" asp-route-id="@item.Id"><sub>read more</sub></a>
                                            }
                                        </td>
                                        <td>
                                            @if (item.ImagePath == null)
                                            {
                                                <img src=@Url.Content("~/Images/defaultUserImage.png")
                                                asp-append-version="true" style="border-radius:20%;"
                                                width="100" height="100" />
                                            }
                                            else
                                            {
                                                <img src=@Url.Content("~/Images/" + item.ImagePath)
                                                asp-append-version="true" style="border-radius:20%;"
                                                width="100" height="100" />
                                            }
                                        </td>
                                        <td>
                                            <p>@item.SendTime</p>
                                        </td>
                                        <td>
                                            <p>@item.Email</p>
                                        </td>
                                        <td>
                                            <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                                            <a asp-action="Delete" asp-route-id="@item.Id">Delete</a> |
                                            <a href="mailto:@item.Email?subject">Replay</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>