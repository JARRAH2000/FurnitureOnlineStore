@model FurnitureStore.Models.Pages

@{
    ViewData["Title"] = "Details";
    Layout = "_AdminLayout";

}
<div class="main-content">
    <div class="section__content section__content--p30">
        <div class="container-fluid">
            <h1>Pages Content</h1>
            <div class="row m-t-25">
                <div class="col-sm-6 col-lg-3">
                    <div class="overview-item overview-item--c2">
                        <div class="overview__inner">
                            <div class="overview-box clearfix">
                                <div class="icon">
                                    <i class="zmdi zmdi-edit"></i>
                                </div>
                                <div class="text">
                                    <a asp-action="Edit" asp-route-id="@Model.Id">  <h2>Edit</h2></a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div>
                <hr />
                <dl class="row">
                    <dt class = "col-sm-2">
                        @Html.DisplayNameFor(model => model.About)
                    </dt>
                    <dd class = "col-sm-10">
                        @Html.DisplayFor(model => model.About)
                    </dd>
                </dl>
                <dl class="row">
                    <dt class="col-sm-2"> 
                        @Html.DisplayNameFor(model=>model.AboutImagePath)
                    </dt>
                    <dd class="card">
                        <img src=@Url.Content("~/Images/" + Model.AboutImagePath)
                        asp-append-version="true" style="border-radius:20%;"
                        width="100" height="100" />
                        </dd>
                </dl>
                <dl class="row">
                    <dt class = "col-sm-2">
                        @Html.DisplayNameFor(model => model.MainLogoPath)
                    </dt>
                    <dd class = "card">
                        <img src=@Url.Content("~/Images/" + Model.MainLogoPath)
                             asp-append-version="true" style="border-radius:20%;"
                             width="100" height="100" />
                    </dd>
                </dl>
                <dl class="row">
                    
                    </dl>
                    <dl class="row">
                    <dt class = "col-sm-2">
                        @Html.DisplayNameFor(model => model.TopImagePath)
                    </dt>
                    <dd class="card">
                        <img src=@Url.Content("~/Images/" + Model.TopImagePath)
                             asp-append-version="true" style="border-radius:20%;"
                             width="100" height="100" />
                    </dd>
                </dl>
                    <dl class="row">
                    <dt class = "col-sm-2">
                        @Html.DisplayNameFor(model => model.Greeting)
                    </dt>
                    <dd class = "col-sm-10">
                        @Html.DisplayFor(model => model.Greeting)
                    </dd>
                    <dt class = "col-sm-2">
                        @Html.DisplayNameFor(model => model.SecLogoPath)
                    </dt>
                    <dd class = "card">
                        @Html.DisplayFor(model => model.SecLogoPath)
                     </dd>
                </dl>
            </div>
            <div>
                <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
            </div>
        </div>
    </div>
</div>