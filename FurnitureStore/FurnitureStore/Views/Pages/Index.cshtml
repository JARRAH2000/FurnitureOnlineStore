@model IEnumerable<FurnitureStore.Models.Pages>

@{
    ViewData["Title"] = "Index";
    Layout = "_AdminLayout";
}
<div class="main-content">
    <div class="section__content section__content--p30">
        <div class="container-fluid">


            <h1>Pages</h1>

            <table class="table">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.About)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.AboutImagePath)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.MainLogoPath)
                        </th>
                        
                        <th>
                            @Html.DisplayNameFor(model => model.TopImagePath)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Greeting)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.SecLogoPath)
                        </th>
                        <th>Manage</th>
                    </tr>
                </thead>
                <tbody>
            @foreach (var item in Model) {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.About)
                        </td>
                        <td>
                                <img src=@Url.Content("~/Images/" + item.AboutImagePath)
                                    asp-append-version="true" style="border-radius:20%;"
                                    width="100" height="100" />
                        </td>
                        <td>
                
                                <img src=@Url.Content("~/Images/" + item.MainLogoPath)
                                    asp-append-version="true" style="border-radius:20%;"
                                    width="100" height="100" />
                        </td>
                        <td>
                                <img src=@Url.Content("~/Images/" + item.TopImagePath)
                                    asp-append-version="true" style="border-radius:20%;"
                                    width="100" height="100" />
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Greeting)
                        </td>
                        <td>
                               @Html.DisplayFor(modelItem=>item.SecLogoPath)
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                            <a asp-action="Details" asp-route-id="@item.Id">Details</a> 
                        </td>
                    </tr>
            }
                </tbody>
            </table>
        </div>
    </div> 
</div>