<!DOCTYPE html>

@using Microsoft.AspNetCore.Http;
@functions{
    async Task AdminData()
    {
        if (Context.Session.GetInt32("UserID") != null)
        {
            decimal? id = (decimal)Context.Session.GetInt32("UserID");
            ModelContext context = new ModelContext();
            User user = context.Users.FirstOrDefault(user => user.Id == id);
            <div class="account-wrap">
                <div class="account-item clearfix js-item-menu">
                    <div class="image">
                        <img src="~/Images/@user.Imagepath" alt="@user.Firstname @user.Lastname" />
                    </div>
                    <div class="content">
                        <a class="js-acc-btn" asp-action="Edit" asp-controller="Client" asp-route-id="@Context.Session.GetInt32("UserID")">@user.Firstname @user.Lastname</a>
                    </div>
                    <div class="account-dropdown js-dropdown">
                        <div class="info clearfix">
                            <div class="image">
                                <a asp-action="Edit" asp-controller="Client" asp-route-id="@Context.Session.GetInt32("UserID")">
                                    <img src="~/Images/@user.Imagepath" alt="@user.Firstname @user.Lastname" />
                                </a>
                            </div>
                            <div class="content">
                                <h5 class="name">
                                    <a asp-action="Edit" asp-controller="Client" asp-route-id="@Context.Session.GetInt32("UserID")">@user.Firstname @user.Lastname</a>
                                </h5>
                                <span class="email">@context.Accounts.Where(acc=>acc.UserId==id).FirstOrDefault().Username</span>
                            </div>
                        </div>
                        <div class="account-dropdown__body">
                            <div class="account-dropdown__item">
                                <a asp-action="Edit" asp-controller="Client" asp-route-id="@Context.Session.GetInt32("UserID")">
                                    <i class="zmdi zmdi-account"></i>Account</a>
                            </div>
                           
                        </div>
                        <div class="account-dropdown__footer">
                            <a asp-action="Logout" asp-controller="Authentication">
                                <i class="zmdi zmdi-power"></i>Logout</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    }
    async Task Logo()
	{
		ModelContext context = new ModelContext();
		var logo = context.Pages.FirstOrDefault();
        <a asp-action="Index" asp-controller="Home">
            <img src="~/Images/@logo.MainLogoPath" style="width:200px;height:75px;" />
        </a>
    }
    async Task Content()
    {
        ModelContext context = new ModelContext();
        var contact = context.ContactInfos.FirstOrDefault();
        var pages = context.Pages.FirstOrDefault();
        if (contact != null)
        {
            <li>
                <a asp-action="Details" asp-route-id="@contact.Id" asp-controller="ContactInfoes">
                <i class="fas fa-phone"></i>Contact</a>
            </li>
        }
        if (pages != null)
        {
            <li>
                <a class="js-arrow" asp-action="Details" asp-route-id="@pages.Id" asp-controller="Pages">
                <i class="fas fa-copy"></i>Pages</a>
            </li>
        }
    }
    async Task Messages()
    {
        ModelContext context = new ModelContext();
        DateTime today = DateTime.Now.Date;
        DateTime startDate = new DateTime(today.Year, today.Month, today.Day, 0, 0, 0);
        DateTime endDate = new DateTime(today.Year, today.Month, today.Day, 23, 59, 59);
        List<Message> messages = context.Messages.Where(msg => msg.SendTime >= startDate && msg.SendTime <= endDate).ToList();
        <span class="quantity">@messages.Count</span>
        <div class="mess-dropdown js-dropdown">
            <div class="mess__title">
                <p>You have @messages.Count new messages</p>
            </div>
            @foreach(Message message in messages)
            {
                <div class="mess__item">
                    <div class="image img-cir img-40">
                        <img src="~/Images/@message.ImagePath" alt="Michelle Moreno" />
                    </div>
                    <div class="content">
                    <h6>
                        @if (message.Subject.Length > 25)
                        {
                            @message.Subject.Substring(0, 25)
                            <span><a asp-action="Details" asp-controller="Messages" asp-route-id="@message.Id" style="color:blue">show more</a></span>
                        }
                        else
                        {
                            @message.Subject
                        }
                    </h6>
                    <p>
                        @if (message.Text.Length > 25)
                        {
                            @message.Text.Substring(0, 25)
                            <span><a asp-action="Details" asp-controller="Messages" asp-route-id="@message.Id" style="color:blue;">show more</a></span>
                        }
                        else
                        {
                            @message.Text
                        }
                    </p>
                    <span class="time">@message.SendTime.ToString("hh:mm tt")</span>
                    <p>
                        <a asp-action="Details" asp-controller="Messages" asp-route-id="@message.Id">Details</a> |
                        <a href="mailto:@message.Email?subject">Replay</a>
                    </p>
                    </div>
                </div>
            }
            <div class="mess__footer">
                <a asp-action="Index" asp-controller="Messages">View all messages</a>
            </div>
        </div>
    }

    async Task Testimonals()
    {
        ModelContext context = new ModelContext();
        DateTime today = DateTime.Now.Date;
        DateTime startDate = new DateTime(today.Year, today.Month, today.Day, 0, 0, 0);
        DateTime endDate = new DateTime(today.Year, today.Month, today.Day, 23, 59, 59);
        List<Testimonial> testimonials = context.Testimonials.Where(msg => msg.SendTime >= startDate && msg.SendTime <= endDate).ToList();


        <span class="quantity">@testimonials.Count</span>
        <div class="email-dropdown js-dropdown">
            <div class="email__title">
                <p>You have @testimonials.Count New Testimonials Today</p>
            </div>
            @foreach(Testimonial testimonial in testimonials)
            {
                User user = context.Users.Where(u => u.Id == testimonial.SenderId).FirstOrDefault();
                <div class="email__item">
                    <div class="image img-cir img-40">
                        <img src="~/Images/@user.Imagepath" alt="Cynthia Harvey" />
                    </div>
                    <div class="content">
                        @if (testimonial.Text.Length > 25)
                        {
                            @testimonial.Text.Substring(0, 25)
                            <span><a asp-action="Details" asp-controller="Testimonials" asp-route-id="@testimonial.Id" style="color:blue;">show more</a></span>
                        }
                        else
                        {
                            @testimonial.Text
                        }
                        <span>@testimonial.SendTime.ToString("hh:mm tt")</span>
                    </div>
                </div>
            }
            
            <div class="email__footer">
                <a asp-action="Index" asp-controller="Testimonials">See all testimonials</a>
            </div>
        </div>
    }
}
