@model FurnitureStore.Models.Testimonial

@{
    ViewData["Title"] = "Delete";
    Layout = "_AdminLayout";
}

<h1>Delete</h1>
<div class="main-content">
    <div class="section__content section__content--p30">
        <h1>Delete a Testimonoial</h1>
        <h3>Are you sure you want to delete this?</h3>
        <div>
            <h4>Testimonial</h4>
            <hr />
            <dl class="row">
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.Sender)
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.Sender.Firstname) @Html.DisplayFor(model=>model.Sender.Lastname)
                </dd class>
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.Text)
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.Text)
                </dd>
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.SendTime)
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.SendTime)
                </dd>
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.Publish)
                </dt>
                <dd class = "col-sm-10">
                    @if(Model.Publish=="Y"){<p>Yes</p>}
                    else{<p>No</p>}
                </dd>
            </dl>
            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Delete" class="btn btn-danger" /> |
                <a asp-action="Index">Back to List</a>
            </form>
        </div>
    </div>
</div>