@model FurnitureStore.Models.Testimonial

@{
    ViewData["Title"] = "Details";
    Layout = "_AdminLayout";
}



<div class="main-content">
    <div class="section__content section__content--p30">
        <div class="container-fluid">
            <h1>Details</h1>
            <hr />
            <dl class="row">
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.Text)
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.Text)
                </dd>
                <dt class = "col-sm-2">
                    Send Time
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.SendTime)
                </dd>
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.Publish)
                </dt>
                <dd class = "col-sm-10">
                    @{
                        string state = Model.Publish == "Y" ? "Yes" : "No";

                    }
                    @state
                </dd>
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.Sender)
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.Sender.Firstname) @Html.DisplayFor(model=>model.Sender.Lastname)
                </dd>
            </dl>
        </div>
        <div>
            <a asp-action="Index">Back to List</a>
        </div>
    </div>
</div>
</div>