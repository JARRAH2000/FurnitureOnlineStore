@model IEnumerable<FurnitureStore.Models.Testimonial>

@{
    ViewData["Title"] = "Index";
    Layout = "_AdminLayout";
}

@functions {
    bool PrintFormat(string str)
    {
        if (str.Length <= 15)
        {
            @str
            return true;
        }
        else
        {
            @str.Substring(0,15)
            return false;
        }
    }
}
<div class="main-content">
    <div class="section__content section__content--p30">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12">
                    <h2 class="title-1 m-b-25">Testimonials</h2>
                    <div class="table-responsive table--no-card m-b-40">
                        <table class="table table-borderless table-striped table-earning">
                            <thead>
                                <tr>
                                    <th>Image</th>
                                    <th>Name</th>
                                    <th>Email</th>
                                    <th>@Html.DisplayNameFor(model => model.Text)</th>
                                    <th>Send Time</th>
                                    <th>Status</th>
                                    <th>Management</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    ModelContext context = new ModelContext();
                                    var account = context.Accounts.Where(acc => acc.UserId == item.SenderId).FirstOrDefault();
                                    
                                    <tr>
                                        <td>
                                            @if (item.Sender.Imagepath == null)
                                            {
                                                <img src=@Url.Content("~/Images/defaultUserImage.png")
                                             asp-append-version="true" style="border-radius:20%;"
                                             width="100" height="100" />
                                            }
                                            else
                                            {
                                                <img src=@Url.Content("~/Images/" + item.Sender.Imagepath)
                                             asp-append-version="true" style="border-radius:20%;"
                                             width="100" height="100" />
                                            }
                                        </td>  
                                        <td>
                                            @item.Sender.Firstname @item.Sender.Lastname
                                        </td>
                                        <td>
                                            @account.Username
                                        </td>
                                        <td>
                                            @if (!PrintFormat(item.Text))
                                            {
                                                <a asp-action="Details" asp-route-id="@item.Id"><sub>read more</sub></a>
                                            }
                                        </td>
                                        <td>
                                           @item.SendTime.Date.ToString("MM/dd/yyyy")
                                        </td>
                                        <td>
                                            @if(item.Publish=="N")
                                            {
                                                <a asp-action="PublishOrHide" asp-route-id="@item.Id" asp-route-publish="@true">Publish</a>
                                            }
                                            else
                                            {
                                                <a asp-action="PublishOrHide" asp-route-id="@item.Id" asp-route-publish="@false" style="color:red">Hide</a>
                                            }
                                        </td>
                                        <td>
                                            <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                                            <a asp-action="Delete" asp-route-id="@item.Id">Delete</a> |
                                            <a href="mailto:@account.Username?subject">Replay</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

